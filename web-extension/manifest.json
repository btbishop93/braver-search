{
  "manifest_version": 2,
  "name": "Braver Search",
  "version": "1.0",
  "description": "Set Brave Search as your default search engine in Safari",
  "icons": {
    "48": "icons/png/icon-48.png",
    "96": "icons/png/icon-96.png",
    "128": "icons/png/icon-128.png",
    "256": "icons/png/icon-256.png",
    "512": "icons/png/icon-512.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "webNavigation",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/png/icon-48.png",
      "96": "icons/png/icon-96.png",
      "128": "icons/png/icon-128.png"
    }
  },
  "content_scripts": [{
    "matches": [
      "*://*.google.com/*",
      "*://*.google.co.uk/*",
      "*://*.google.ca/*",
      "*://*.google.com.au/*",
      "*://*.bing.com/*",
      "*://*.duckduckgo.com/*",
      "*://search.yahoo.com/*",
      "*://*.yandex.com/*"
    ],
    "js": ["content.js"],
    "run_at": "document_start"
  }]
} 