{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "Braver Search",
    "description": "Replace Safari's Google, DuckDuckGo, or Bing search engines with Brave Search",
    "version": "1.0.0",

    "icons": {
        "48": "images/icon-48.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "scripts": ["background.js"],
        "type": "module",
        "persistent": false
    },

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "images/icon-48.png",
            "128": "images/icon-128.png",
            "256": "images/icon-256.png",
            "512": "images/icon-512.png"
        }
    },

    "permissions": [
        "tabs",
        "webNavigation",
        "storage"
    ],
    
    "host_permissions": [
        "*://*.google.com/*",
        "*://*.google.co.uk/*",
        "*://*.google.ca/*",
        "*://*.google.com.au/*",
        "*://*.bing.com/*",
        "*://*.duckduckgo.com/*",
        "*://search.yahoo.com/*",
        "*://*.yandex.com/*",
        "*://search.brave.com/*"
    ]
} 